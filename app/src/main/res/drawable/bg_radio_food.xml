<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- places radio checked = true -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <corners android:topRightRadius="3dp" android:bottomRightRadius="3dp" />
            <stroke android:width="2dp" android:color="@color/colorWhite" />
            <padding android:top="6dp" android:right="8dp" android:bottom="6dp" android:left="8dp" />
        </shape>
    </item>

    <!--default places radio -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed" />
            <corners android:topRightRadius="3dp" android:bottomRightRadius="3dp" />
            <stroke android:width="2dp" android:color="@color/colorWhite" />
            <padding android:top="6dp" android:right="8dp" android:bottom="6dp" android:left="8dp" />
        </shape>
    </item>
</selector>